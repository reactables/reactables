---
import Layout from "../../layouts/Layout.astro";
import ContentPageLayout from "../../layouts/ContentPageLayout.astro";
import { getEntry } from "astro:content";
import { type SectionLink } from "../../layouts/ContentPageLayout.astro";

const content = await getEntry('references', 'forms-api');
const { Content } = await content.render();

const sectionLinks: Array<SectionLink> = [
  {
    label: 'Form Builders',
    link: '#api-builders',
    children: [
      {
        label: 'build',
        link: '#api-build',
      },
      {
        label: 'control',
        link: '#api-control',
      },
      {
        label: 'group',
        link: '#api-group',
      },
      {
        label: 'array',
        link: '#api-array',
      },
      {
        label: 'load',
        link: '#api-load',
      },
      {
        label: 'RxFormOptions',
        link: '#api-form-options',
      },
      {
        label: 'RxFormProviders',
        link: '#api-form-providers',
      },
    ]
  },
  {
    label: 'RxFormActions',
    link: '#api-actions',
    children: [
      {
        label: 'updateValues',
        link: '#api-actions-update-values',
      },
      {
        label: 'addControl',
        link: '#api-actions-add-control',
      },
      {
        label: 'pushControl',
        link: '#api-actions-push-control',
      },
      {
        label: 'removeControl',
        link: '#api-actions-remove-control',
      },
      {
        label: 'markControlAsPristine',
        link: '#api-actions-mark-as-pristine',
      },
      { label: 'markControlAsTouched',
        link: '#api-actions-mark-as-touched',
      },
      {
        label: 'markControlAsUntouched',
        link: '#api-actions-mark-as-untouched',
      },
      {
        label: 'resetControl',
        link: '#api-actions-resetControl',
      },
    ]
  },
  {
    label: 'Helpers',
    link: '#api-helpers',
    children: [
      {
        label: 'getArrayItems',
        link: '#api-get-array-items'
      },
      {
        label: 'getAncestorControls',
        link: '#api-get-ancestor-controls'
      },
      {
        label: 'getDescendantControls',
        link: '#api-get-descendant-controls'
      },
      {
        label: 'getValueFromControlConfig',
        link: '#api-get-value-from-config'
      },
    ]
  },
  {
    label: 'Other Interfaces',
    link: '#api-interfaces'
  },
];
---

<Layout title="Reactables - Forms API">
  <ContentPageLayout
    sectionLinks={sectionLinks}
    editPageLink={{ link: 'https://github.com/reactables/reactables/edit/main/docs/src/content/references/forms-api.md'}}
    prevLink={{ label: 'Core API', link: '/references/core-api' }}
  >
    <Content />
  </ContentPageLayout>
</Layout>